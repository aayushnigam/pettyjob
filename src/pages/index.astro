---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'PettyJobs.com - Your One-Stop Solution for All Petty Jobs',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <Note/>
  <!-- Hero Widget ******************* -->
  <Hero
    actions={[
      { text: 'Get Work', href: '#get-work' },
      {variant: 'primary', text: 'Find Workers ', href: '#find-workers', target: '_blank', icon: 'tabler:tools'},
    ]}
    image={{ src: 'https://images.unsplash.com/photo-1528953030358-b0c7de371f1f?q=80&w=1902&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D', alt: 'PettyJobs Hero Image' }}
  >
    <Fragment slot="title">
      Get Your Petty Jobs Done <span class="hidden xl:inline"> </span>
      <span class="text-accent dark:text-white highlight">Hassle-Free</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">PettyJobs.com</span> is your go-to platform for all kinds of petty jobs</span
      >
      <span class="block mb-1 sm:hidden font-bold text-blue-600"></span>
      - From designing to printing, event helper to electrical worker, we've got you covered! Say goodbye to the hassle and hello to convenience.
    </Fragment>
  </Hero>

  <!-- Features Widget *************** -->
  <Features
    id="features"
    tagline="Our Services"
    title="Petty Jobs We Offer"
    subtitle="We provide a wide range of petty job services to cater to your needs."
    items={[
      {
        title: 'Cleaning Services',
        icon: 'tabler:brush',
      },
      {
        title: 'Plumbing Services',
        icon: 'tabler:tools',
      },
      {
        title: 'Printing Services',
        icon: 'tabler:plant',
      },
      {
        title: 'Electrical Services',
        icon: 'tabler:bolt',
      },
      {
        title: 'Designing Services',
        icon: 'tabler:palette',
      },
      {
        title: 'Event Services',
        icon: 'tabler:tool',
      },
    ]}
  />

  <!-- Steps Widget ****************** -->
  <Steps
    title="How It Works"
    items={[
      {
        title: 'Step 1: <span class="font-medium">Browse Job Categories</span>',
        icon: 'tabler:search',
      },
      {
        title: 'Step 2: <span class="font-medium">Select Your Required Job</span>',
        icon: 'tabler:hand-click',
      },
      {
        title: 'Step 3: <span class="font-medium">Hire a Professional Worker</span>',
        icon: 'tabler:user-check',
      },
      {
        title: 'Get the Job Done!',
        icon: 'tabler:check',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1507679799987-c73779587ccf?q=80&w=2071&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D',
      alt: 'Steps image',
    }}
  />

  <!-- Features2 Widget ************** -->
  <Features2
    title="Why Choose PettyJobs.com?"
    tagline="Our Advantages"
    items={[
      {
        title: 'Trusted Professionals',
        description: 'We carefully vet and onboard skilled workers for your peace of mind.',
        icon: 'flat-color-icons:approval',
      },
      {
        title: 'Competitive Pricing',
        description: 'We offer competitive rates for all our petty job services.',
        icon: 'flat-color-icons:currency-exchange',
      },
      {
        title: 'Easy Scheduling',
        description: 'Book appointments and schedule jobs at your convenience.',
        icon: 'flat-color-icons:document',
      },
      {
        title: 'Quality Assurance',
        description: 'We ensure high-quality work and customer satisfaction.',
        icon: 'flat-color-icons:approval',
      },
      {
        title: 'Secure Payments',
        description: 'Enjoy safe and secure payment options for your peace of mind.',
        icon: 'flat-color-icons:currency-exchange',
      },
      {
        title: 'Dedicated Support',
        description: 'Our customer support team is always ready to assist you.',
        icon: 'flat-color-icons:business-contact',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- Content Widget **************** -->
  <Content
    isReversed
    tagline="Get Work with Us"
    subtitle="Join our team of skilled professionals and earn by completing petty jobs."
    items={[
      {
        title: 'Flexible Work Schedule',
        description: 'Choose your own working hours and take on jobs at your convenience.',
      },
      {
        title: 'Competitive Earnings',
        description: 'Earn competitive rates for the jobs you complete.',
      },
      {
        title: 'Skill Development',
        description: 'Enhance your skills and gain valuable experience in various fields.',
      },
      {
        title: 'Secure Payments',
        description: 'Enjoy secure and timely payments for your work.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1521791136064-7986c2920216?q=80&w=2069&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D',
      alt: 'Get Work with Us',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Join Our Team of Skilled Professionals!</h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- FAQs Widget ******************* -->
  <FAQs
    title="Frequently Asked Questions"
    subtitle="Got questions? We've got answers."
    tagline="FAQs"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
       title: 'How do I book a petty job service?',
       description:
         'Booking a petty job service on PettyJobs.com is easy. Simply browse our job categories, select the service you need, provide the necessary details, and hire a professional worker. Our user-friendly interface makes the process seamless.',
     },
     {
       title: 'How can I verify the credentials of the workers?',
       description:
         'At PettyJobs.com, we take pride in our rigorous vetting process. All our workers undergo thorough background checks and skill assessments to ensure they meet our high standards. You can rest assured that you are hiring qualified professionals.',
     },
     {
       title: 'What payment methods do you accept?',
       description:
         'We accept various secure payment methods, including credit/debit cards, mobile wallets, and online banking transfers, for your convenience.',
     },
     {
       title: 'Do you offer any guarantees or warranties?',
       description:
         'Yes, we stand behind the quality of our services. If you are not satisfied with the work, we will make it right or offer a refund, subject to our terms and conditions.',
     },
   ]}
 />

 <!-- CallToAction Widget *********** -->
 <CallToAction
   actions={[
     {
       variant: 'primary',
       text: 'Get Started',
       href: '#get-started',
       icon: 'tabler:tools',
     },
   ]}
 >
   <Fragment slot="title">
     Ready to Get Your Petty Jobs Done?<br class="block sm:hidden" /><span class="sm:whitespace-nowrap"></span>
   </Fragment>

   <Fragment slot="subtitle">
     Browse our job categories, hire skilled workers, and get your tasks completed hassle-free.<br class="hidden md:inline" />
   </Fragment>
 </CallToAction>
</Layout>